{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
  <div class="gcromo-budget-form">
    <div class="card">
      <div class="card-header d-flex align-items-center justify-content-between">
        <h1 class="h3 mb-0">
          {% if isEditing %}
            {{ 'Edit budget'|trans({}, 'Modules.Gcromo.Admin') }}
          {% else %}
            {{ 'Create budget'|trans({}, 'Modules.Gcromo.Admin') }}
          {% endif %}
        </h1>
        <a class="btn btn-outline-secondary" href="{{ path('admin_gcromo_budget_index') }}">
          {{ 'Back to list'|trans({}, 'Modules.Gcromo.Admin') }}
        </a>
      </div>
      <div class="card-body">
        {{ form_start(form) }}
          <div class="row">
            <div class="col-md-4">
              {{ form_row(form.quoteReference) }}
            </div>
            <div class="col-md-4">
              {{ form_row(form.quoteDate) }}
            </div>
            <div class="col-md-4">
              {{ form_row(form.status) }}
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              {{ form_row(form.customerId) }}
            </div>
            <div class="col-md-6">
              {{ form_row(form.salesRep) }}
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              {{ form_row(form.productName) }}
            </div>
            <div class="col-md-6">
              {{ form_row(form.workScope) }}
            </div>
          </div>

          {{ form_row(form.productSummary) }}

          <div class="row">
            <div class="col-md-4">
              {{ form_row(form.dimensionHeightCm) }}
            </div>
            <div class="col-md-4">
              {{ form_row(form.dimensionWidthPrimaryCm) }}
            </div>
            <div class="col-md-4">
              {{ form_row(form.dimensionWidthSecondaryCm) }}
            </div>
          </div>

          <div class="mt-3 d-flex gap-2">
            {{ form_widget(form.save) }}
            {{ form_widget(form.saveAndStay) }}
          </div>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}
